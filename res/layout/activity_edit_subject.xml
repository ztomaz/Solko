<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditObligationActivity" >

    <EditText
        android:id="@+id/name_of_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Ime predmeta" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/list_of_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/textView1" >

    </ListView>

    <ImageButton
        android:id="@+id/add_new_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/list_of_times"
        android:layout_below="@+id/name_of_subject"
        android:background="@drawable/ic_action_new"
        android:text="Button" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_new_time"
        android:layout_centerHorizontal="true"
        android:text="Urnik"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
